{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan: Install Debug",
            "type": "shell",
            "command": "conan",
            "args": [
                "install",
                ".",
                "--output-folder=build",
                "--build=missing",
                "--settings=build_type=Debug",
                "--settings=compiler.cppstd=20"
            ],
            "group": "build",
            "detail": "Install debug dependencies using Conan"
        },
        {
            "label": "Conan: Install Release",
            "type": "shell",
            "command": "conan",
            "args": [
                "install",
                ".",
                "--output-folder=build",
                "--build=missing",
                "--settings=build_type=Release",
                "--settings=compiler.cppstd=20"
            ],
            "group": "build",
            "detail": "Install release dependencies using Conan"
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/build/build/generators/conan_toolchain.cmake"
            ],
            "group": "build",
            "detail": "Configure project using CMake"
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build debug version"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build release version"
        }
    ]
}